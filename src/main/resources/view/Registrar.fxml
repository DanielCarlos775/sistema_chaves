<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-spacing: 12;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dc_vb.sgc.controller.RegistrarController">
   <children>
      <TextField fx:id="nameInput" promptText="nome" />
      <TextField fx:id="emailInput" layoutX="10.0" layoutY="10.0" promptText="email" />
      <PasswordField fx:id="passwordInput" promptText="senha" />
      <Button mnemonicParsing="false" onAction="#handleRegister" text="Criar" />
   </children>
   <padding>
      <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
   </padding>
</VBox>
