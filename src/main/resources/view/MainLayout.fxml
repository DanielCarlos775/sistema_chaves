<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="sidebar">
            <children>
                <Label text="Labeaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaal"/>
            </children>
        </HBox>
        <VBox fx:id="content">
            <children>
                <HBox fx:id="header"/>
                <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Content will be injected here dynamically -->
                    </children>
                </StackPane>
                <HBox fx:id="statusBar" VBox.vgrow="NEVER">
                    <children>
                        <Label fx:id="systemStatus" text="System Status: Ready">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
