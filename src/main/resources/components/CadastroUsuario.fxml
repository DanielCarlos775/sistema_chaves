<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dc_vb.sgc.controller.CadastroUsuarioController">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Cadastro de Usuário" />

            <TextField fx:id="nomeInput" prefWidth="250" promptText="Nome completo" />
            <TextField fx:id="emailInput" prefWidth="560.0" promptText="E-mail" />
         <TextField fx:id="predioInput" promptText="Prédio" />
         <TextField fx:id="salaInput" promptText="Sala" />
            <PasswordField fx:id="senhaInput" prefWidth="560.0" promptText="Senha" />
        </VBox>

            <Label fx:id="mensagemLabel" layoutX="150.0" layoutY="334.0" prefWidth="300" textFill="red" wrapText="true" />

            <Button fx:id="btnCadastrar" layoutX="225.0" layoutY="286.0" onAction="#handleCadastrar" prefWidth="150" text="Cadastrar" />

               <ComboBox fx:id="tipoUsuarioCombo" layoutX="175.0" layoutY="243.0" prefWidth="250" promptText="Selecione o tipo" />
    </children>

</AnchorPane>
